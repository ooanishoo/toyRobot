{
    "defaultSeverity": "error",
    "extends": [
        "tslint:latest"
    ],
    "rules": {
        "no-implicit-dependencies": [
            true, 
            "dev"
        ],
        "indent": [
            true,
            "spaces"
        ],
        "jsdoc-format": true,
        "no-var-keyword": true,
        "quotemark": [
            true,
            "double",
            "avoid-escape"
        ]
    }
}