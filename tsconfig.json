{
  "compilerOptions": {
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": "./src/",
    "lib": ["dom", "es2015.promise", "es5", "es2015.symbol"],
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "ES6",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*-test.ts"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  },
  "compileOnSave": true
}
